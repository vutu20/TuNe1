<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questions">
<Button
    android:layout_width="200dp"
    android:layout_marginTop="100dp"
    android:layout_height="wrap_content"
    android:text="Tiếp Tục"
    android:textSize="20sp"
    android:layout_gravity="center"
    android:textColor="#ffffff"
    android:background="@drawable/button"
    android:id="@+id/btntieptuc"/>
    <Button
        android:layout_width="200dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="Âm thanh:"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:id="@+id/btnamthanh"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nhạc nền:"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:id="@+id/btnnhacnen"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chơi Lại"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:id="@+id/btnchoilai"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:id="@+id/btnquaylai"/>
</LinearLayout>